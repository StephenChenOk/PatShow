<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_travel_notes_box"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/travel_notes"
        android:textColor="@color/blackColor2"
        android:textSize="@dimen/useful_info_text_21" />

    <androidx.slidingpanelayout.widget.SlidingPaneLayout
        android:layout_width="1dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/peaceMindBgColor"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/peace_mind" />

            <Space
                android:layout_width="3dp"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peace_mind_travel"
                android:textColor="@color/blackColor1"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peaceMind_One"
            android:textColor="@color/infoBoxTextColor"
            android:textSize="@dimen/useful_info_text_16" />

        <Space
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peaceMind_Two"
            android:textColor="@color/infoBoxTextColor"
            android:textSize="@dimen/useful_info_text_16" />

        <Space
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peaceMind_Three"
            android:textColor="@color/infoBoxTextColor"
            android:textSize="@dimen/useful_info_text_16" />

    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_time"
        android:textColor="@color/blackColor2"
        android:textSize="@dimen/useful_info_text_21" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/openTimeBoxColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/date_four"
        android:textColor="@color/blackColor3"
        android:textSize="@dimen/useful_info_text_17" />

    <Space
        android:layout_width="1dp"
        android:layout_height="7dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_time_item"
            android:textColor="@color/blackColor3"
            android:textSize="@dimen/useful_info_text_16" />

        <Space
            android:layout_width="50dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_six"
            android:textColor="@color/blackColor3"
            android:textSize="@dimen/useful_info_text_16" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/openTimeBoxColor"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/date_eleven"
        android:textColor="@color/blackColor3"
        android:textSize="@dimen/useful_info_text_17" />

    <Space
        android:layout_width="1dp"
        android:layout_height="7dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_time_item"
            android:textColor="@color/blackColor3"
            android:textSize="@dimen/useful_info_text_16" />

        <Space
            android:layout_width="50dp"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_seven"
            android:textColor="@color/blackColor3"
            android:textSize="@dimen/useful_info_text_16" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="@dimen/wideLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/AddInfoBgColor"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_info"
            android:textColor="@color/infoBoxTextColor"
            android:textSize="@dimen/useful_info_text_17" />

        <Space
            android:layout_width="1dp"
            android:layout_height="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/travel_use_time"
            android:textColor="@color/blackColor4"
            android:textSize="@dimen/useful_info_text_16" />

    </LinearLayout>

</LinearLayout>