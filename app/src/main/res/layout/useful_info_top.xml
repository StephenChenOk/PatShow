<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <Space
        android:layout_width="1dp"
        android:layout_height="@dimen/seekbarThumbSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigate_before_black_32dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/useful_info"
            android:textColor="@color/blackColor3"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_black_32dp" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_useful_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/rb_introduction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/brief_introduction"
            android:textColor="@drawable/rb_useful_info_text_bg_color"
            android:textSize="@dimen/useful_info_text_17" />

        <RadioButton
            android:id="@+id/rb_travel_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/travel_notes"
            android:textColor="@drawable/rb_useful_info_text_bg_color"
            android:textSize="@dimen/useful_info_text_17" />

        <RadioButton
            android:id="@+id/rb_strategy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/strategy"
            android:textColor="@drawable/rb_useful_info_text_bg_color"
            android:textSize="@dimen/useful_info_text_17" />

    </RadioGroup>

</LinearLayout>